#! /usr/bin/dash


cd "$HOME"


project=$(cat "$HOME/.config/dmenu/dmenu_build" | dmenu -i -l 8 -p 'Build:')
[ -z "$project" ] && exit


cd "$project"


cmd=$(printf 'make all -j2\nmake clean\nsudo make install' | dmenu -l 3)
[ -z "$cmd" ] && exit


st -t "$project" -e dash -c "$cmd; read -p ':' ''"
