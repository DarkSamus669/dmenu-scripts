#!/bin/sh



cd "$HOME"



PROJECT="$(dmenu -i -l 8 -p 'Build:' < "$HOME/.config/dmenu/dmenu_build")"
[ -z "$PROJECT" ] && exit

cd "$PROJECT"

CMD="$(echo "git status\ngit diff\nmake all -j2\nmake clean\nsudo make install" | dmenu -l 5)"
[ -z "$CMD" ] && exit



st -t "$PROJECT" -e dash -c "$CMD; read -p ':' 'PROMPT'"
