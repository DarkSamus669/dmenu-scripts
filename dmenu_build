#!/bin/sh



cd "$HOME"



PROJECT="$(dmenu -i -l 8 -p 'Build:' < "$HOME/.config/dmenu/dmenu_build")"
[ -z "$PROJECT" ] && exit

cd "$PROJECT"

CMD="$(echo "git status\n`
            `git diff\n`
            `make all -j2\n`
            `make clean\n`
            `sudo make install" | dmenu -l 5)"

[ -z "$CMD" ] && exit



st -t "$PROJECT" -e dash -c "$CMD; read -p ':' 'PROMPT'"
