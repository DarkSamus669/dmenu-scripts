#!/bin/sh



# Prompt to select package
package="$(dpkg-query --show -f '${source:Package} ${source:Version}\n' | sort -s \
                                                                        | dmenu -i -p 'Package:' -l 8 \
                                                                        | awk '{ print $1 }')"
[ -z "$package" ] && exit


## Set package command
#package_command="apt show"

## Select package command
package_command="$(echo 'apt show\ndpkg -L | less' | dmenu -l 2)"
[ -z "$package_command" ] && exit



# Execute package command
st -t "$package" -e dash -c "$package_command $package ; read -p ':' ''"  &
